    {value: 'vi', label: 'Vietnamese (VI)'},
    {value: 'zh', label: 'Chinese (ZH)'}
] %}

{% import '_includes/forms.twig' as forms %}

{% block content %}
    <div class="main">
        <form method="post">
            {{ actionInput('multi-translator/glossaries/save') }}
            {{ csrfInput() }}
            {{ hiddenInput('id', glossary.id) }}

            <fieldset>
                {{ forms.textfield({
                    label: 'Name',
                    name: 'name',
                    value: glossary.name,
                    errors: glossary.getErrors('name')
                }) }}
                {{ forms.selectfield({
                    label: 'Source Language',
                    name: 'sourceLanguage',
                    value: glossary.sourceLanguage,
                    options: supportedLanguages,
                    disabled: (glossary.id is not empty),
                    errors: glossary.getErrors('sourceLanguage')
                }) }}
                {{ forms.selectfield({
                    label: 'Target Language',
                    name: 'targetLanguage',
                    value: glossary.targetLanguage,
                    options: supportedLanguages,
                    disabled: (glossary.id is not empty),
                    errors: glossary.getErrors('targetLanguage')
                }) }}
                {% if glossary.id is not empty %}
                    {{ hiddenInput('sourceLanguage', glossary.sourceLanguage) }}
                    {{ hiddenInput('targetLanguage', glossary.targetLanguage) }}
                {% endif %}
            </fieldset>

            <fieldset>
                {{ forms.editableTableField({
                    label: "Content",
                    name: "rows",
                    id: "rows",
                    cols: {
                        'source': {
                            type: 'singleline',
                            heading: "Source Text",
                            rows: 1
                        },
                        'target': {
                            type: 'singleline',
                            heading: "Target Text",
                            rows: 1
                        },
                    },
                    rows: glossary.rows,
                    allowAdd: true,
                    allowDelete: true,
                    allowReorder: true,
                    addRowLabel: 'Add a row',
                    errors: glossary.getErrors('rows')
                })|spaceless }}
            </fieldset>

            <button type="submit" class="btn submit">Save</button>
        </form>
    </div>
{% endblock %}
